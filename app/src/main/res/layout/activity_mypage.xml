<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:src="@drawable/ic_baseline_perm_identity_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="Name"
                android:textSize="20dp" />

            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="School/department" />
        </LinearLayout>

        <Button
            android:layout_height="57dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:text="Log Out"
            android:layout_weight="1"
            android:onClick="onLogOutButtonClick"/>
    </LinearLayout>

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:onClick="onMyPostButtonClick">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:src="@drawable/ic_baseline_stars_24" />

        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:text="내가 작성한 글"
            android:textSize="25dp" />

    </LinearLayout>

    <View
        android:background="#909090"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:onClick="onInterestedPostButtonClick">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:src="@drawable/ic_baseline_turned_in_24" />

        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:text="관심있는 글"
            android:textSize="25dp" />

    </LinearLayout>

    <View
        android:background="#909090"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:onClick="onTermsButtonClick">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:src="@drawable/ic_baseline_assignment_24" />

        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:text="이용 약관"
            android:textSize="25dp" />

    </LinearLayout>

    <View
        android:background="#909090"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"/>




</LinearLayout>